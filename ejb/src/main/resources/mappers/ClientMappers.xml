<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="py.pol.una.ii.pw.mapper.ClientMappers">

    <select id="findAllOrderedByName" resultType="py.pol.una.ii.pw.model.Client">
        SELECT * FROM CLIENT
    </select>

    <select id="findById" parameterType="long" resultType="py.pol.una.ii.pw.model.Client">
        SELECT * FROM CLIENT WHERE id = #{id}
    </select>

    <insert id="register" parameterType="py.pol.una.ii.pw.model.Client" useGeneratedKeys="true">
        INSERT INTO CLIENT (name) VALUES (#{name})
    </insert>

</mapper>